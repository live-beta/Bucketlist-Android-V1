<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/idView"
                android:layout_width="35dp"
                android:layout_height="130dp"
                android:layout_margin="1dp"
                android:background="@color/cardview_light_background"
                android:gravity="center"
                android:text="Id"
                android:textColor="@color/primary_text" />

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@+id/imageView"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bucketlistView"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_pool_black_48dp" />

                <TextView
                    android:id="@+id/bucketlistName"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Bucketlist Name"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/viewItems"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="1dp"
                        android:background="@mipmap/ic_view_headline_black_48dp" />

                    <ImageView
                        android:id="@+id/deleteBucketlist"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="1dp"
                        android:background="@mipmap/ic_delete_black_48dp" />

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>