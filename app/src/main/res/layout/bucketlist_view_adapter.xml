<layout xmlns:android ="http://schemas.android.com/apk/res/android"
    xmlns:tools ="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="mainViewModel"
            type="com.example.sam.bucketlist.viewmodel.ItemBucketListViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:cardCornerRadius="5dp"
        android:id="@+id/bucket_data">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:elevation="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView"
                android:background="@color/cardview_light_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bucketlistView"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_pool_black_48dp" />

                <TextView
                    android:id="@+id/bucketlistName"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@{mainViewModel.bucketListName}"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="-20dp"
                    android:gravity="right"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/viewItems"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="1dp"
                        android:background="@mipmap/ic_view_headline_black_48dp" />

                    <ImageView
                        android:id="@+id/deleteBucketlist"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="1dp"
                        android:background="@mipmap/ic_delete_black_48dp" />

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>